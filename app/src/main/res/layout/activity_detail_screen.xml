<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fiit.baranek.tomas.mtaa.Activities.DetailScreenActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ŠKODA FABIA"
        android:id="@+id/textViewBrand"
        android:layout_marginTop="129dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Adresa:"
        android:id="@+id/textView2"
        android:layout_below="@+id/textViewBrand"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rok výroby:"
        android:id="@+id/textViewYear"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Najazdené kilometre:"
        android:id="@+id/textViewMileAge"
        android:layout_below="@+id/textViewYear"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Typ prevodovky"
        android:id="@+id/textViewTransmission"
        android:layout_below="@+id/textViewMileAge"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Farba interieru:"
        android:id="@+id/textViewColor"
        android:layout_below="@+id/textViewTransmission"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Motor:"
        android:id="@+id/textViewEngine"
        android:layout_below="@+id/textViewColor"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Typ pohonu:"
        android:id="@+id/textViewDrive"
        android:layout_below="@+id/textViewEngine"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Palivo:"
        android:id="@+id/textViewFuel"
        android:layout_below="@+id/textViewDrive"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Telefón::"
        android:id="@+id/textViewTelephone"
        android:layout_below="@+id/textViewFuel"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cena:"
        android:id="@+id/textViewPrice"
        android:layout_below="@+id/textViewTelephone"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upraviť"
        android:id="@+id/buttonUpade"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textViewBrand" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Žilina Košická 5"
        android:id="@+id/textViewAddressEdit"
        android:layout_below="@+id/textViewBrand"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2010"
        android:id="@+id/textViewYearEdit"
        android:layout_below="@+id/textViewAddressEdit"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="120 000"
        android:id="@+id/textViewMileEdit"
        android:layout_below="@+id/textViewYearEdit"
        android:layout_alignEnd="@+id/textViewYearEdit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="manuálna"
        android:id="@+id/textViewTransmissionEdit"
        android:layout_below="@+id/textViewMileEdit"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="hnedá"
        android:id="@+id/textViewColorEdit"
        android:layout_below="@+id/textViewTransmissionEdit"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1,2 TSI"
        android:id="@+id/textViewEngineEngineEdit"
        android:layout_below="@+id/textViewColorEdit"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="4x4"
        android:id="@+id/textViewDriveTypEdit"
        android:layout_below="@+id/textViewEngineEngineEdit"
        android:layout_alignEnd="@+id/textViewEngineEngineEdit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nafta"
        android:id="@+id/textViewFuelEdit"
        android:layout_below="@+id/textViewDriveTypEdit"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="+421 918 573 3335"
        android:id="@+id/textViewPhoneEdit"
        android:layout_alignTop="@+id/textViewTelephone"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="12 300€"
        android:id="@+id/textViewPriceEdit"
        android:layout_below="@+id/textViewPhoneEdit"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewPrice" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ImageView"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
