<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/pomocny1"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        />
    <RelativeLayout
        android:id="@+id/celyObsah"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pomocny1">
                <RelativeLayout
                    android:id="@+id/CarInfo"
                    android:layout_gravity="left"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_toStartOf="@+id/deleteButton"
                    android:layout_alignParentBottom="true">

                    <RelativeLayout
                        android:id="@+id/CarInfo2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal"
                        android:layout_alignParentEnd="true">

                            <TextView android:id="@+id/car_brand"
                                android:layout_width="wrap_content"
                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:textSize="24dp"

                                android:textStyle="bold" />



                            <TextView android:id="@+id/car_model"
                                android:layout_width="wrap_content"
                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:textSize="24dp"
                                android:layout_toRightOf="@id/car_brand"
                                android:textStyle="bold"
                                />
                    </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/CarInfo3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_horizontal"
                            android:layout_below="@+id/CarInfo2">

                            <TextView android:id="@+id/car_yearOfProduction"
                                android:layout_width="wrap_content"

                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:textStyle="bold" />



                            <TextView android:id="@+id/car_fuel"
                                android:layout_width="wrap_content"
                                android:textColor="#000000"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:layout_toRightOf="@id/car_yearOfProduction"
                                android:textStyle="bold" />
                    </RelativeLayout>

                <TextView android:id="@+id/car_price"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_below="@+id/CarInfo3"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                </RelativeLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deleteButton"
                    android:background="@null"
                    android:src="@mipmap/ic_launcher_delete"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pomocny2"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/celyObsah"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>